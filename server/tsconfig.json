{
  "compileOnSave":false,
  "buildOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES6",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "removeComments": false,
    "noImplicitAny": false,
    "allowJs": true
  },
  "filesGlob": [
    "index.ts",
    "app.ts",
    "typings/index.d.ts",
    "api/**/*.ts",
    "handlers/**/*.ts",
    "../shared/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ],
  "atom": {
    "rewriteTsconfig": false,
    "formatOnSave": true
  }
}
